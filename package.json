{
  "name": "micro_service_template",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-http-header-size 24000 src/app.ts",
    "start:dev": "PINO_LOG_LEVEL=debug NODE_ENV=development nodemon --exec ts-node-dev --respawn --transpile-only src/app.ts | pino-pretty -c -t -l severity",
    "knex": "node -r dotenv/config ./node_modules/.bin/knex",
    "migrate": "knex migrate:latest --knexfile ./config/knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile ./config/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./config/knexfile.ts",
    "seed:run": "knex seed:run --knexfile ./config/knexfile.ts",
    "seed:make": "knex seed:make --knexfile ./config/knexfile.ts -x ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Microservice template for Node.js applications",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "dotenv": "^16.5.0",
    "env-schema": "^6.0.1",
    "fastify": "^5.3.2",
    "fastify-healthcheck": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "pg": "^8.15.6",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
